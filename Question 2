#include <iostream>using namespace std;int findGCD(int x, int y) {   if (y == 0)      return x;      return findGCD(y, x % y);   }   void lowestFraction(int num1, int num2){      int denom;      denom = findGCD(num1,num2);      num1/=denom;      num2/=denom;      cout<< "Lowest Fraction : "<<num1<<"/"<<num2;}int main(){	   int Num1;   cout<<"Enter Numerator"<<endl;   cin>>Num1;   int Num2;   cout<<"Enter Denominator"<<endl;   cin>>Num2;   cout<< "fraction = "<<Num1<<"/"<<Num2<<endl;   lowestFraction(Num1,Num2);   return 0;}
